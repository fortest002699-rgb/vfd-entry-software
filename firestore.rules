rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write for all users during development
    // In production, add: if request.auth != null
    match /jobs/{jobId} {
      allow read, write: if true;
    }
    
    match /pdfs/{pdfId} {
      allow read, write: if true;
    }
    
    match /sheet_syncs/{syncId} {
      allow read, write: if true;
    }
  }
}
